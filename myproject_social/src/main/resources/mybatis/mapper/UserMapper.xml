<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.UserMapper">
<!--     public void addUser(User user);-->
    <insert id="addUser" parameterType="com.example.demo.bean.User">
        insert into t_user values
        (#{id},#{username},#{password},#{url},#{gender},#{profile},#{add_time},#{correct_time},#{status},#{isuse})
    </insert>
<!--    User findUsername(String username);-->
    <select id="findUsername" resultType="com.example.demo.bean.User">
        select * from t_user where u_name=#{usernmae}
    </select>
<!--    User findByUsername(User user);-->
    <select id="findByUsername" resultType="com.example.demo.bean.User">
        select * from t_user where u_name=#{username} and u_password=#{password}
    </select>

</mapper>